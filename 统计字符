#mmen
#include<stdio.h>
int main()
{
	printf("程序开始\n输入It is not easy when you want to make something change,but if it is easy that eyeryone can make it.\n统计有多少个it\n");
	char a[100]="It is not easy when you want to make something change,but if it is easy that eyeryone can make it.";
	int b,sum=0;
	for(b=0;b<100;b++)
	{
		if(a[b]=='i'||a[b]=='I')
		{
			if(a[b+1]=='t')
			{
				sum++;
			}
		}
	}
	printf("出现了%d次it\n",sum);
	printf("程序即将结束\n");
	return 0;
}
